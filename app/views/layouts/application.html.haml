%html{:lang => "en", "xml:lang" => "en", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-type"}/
    %title= h(yield(:title) || controller.action_name)
    = raw include_stylesheets :common, :media => 'all'
    = raw include_stylesheets :print, :media => 'print'
    = raw include_javascripts :common
    - if Rails.env.development?= javascript_include_tag "jquery.lint.js"
    /[if IE]
      <haml:loud> raw include_stylesheets :ie, :media =&amp;gt; 'screen, projection' </haml:loud>
    - if Rails.env.development?
      = javascript_include_tag "/blackbird/blackbird.js"
      = stylesheet_link_tag "/blackbird/blackbird.css"
    = yield :head
  %body
    .container
      = content_tag :p, Rails.env, :class => Rails.env, :id => "rails-env" unless Rails.env.production? || ENV["HIDE_ENV_BADGE"] == "true"
      = yield :top_menu
      = render :partial => 'layouts/flashes'
      - if show_title? %h1= h yield(:title)
      = yield
